
$logo-size: 64px;
$logotype-size: 32px;
$tagline-size: 14px;

#header {
  @include main-grid();
  @include clearfix;

  padding: rem(20px) 0;
  border-bottom: 1px solid $separator-color;

  div#brand {
    float: left;

    background-image: url("data:image/svg+xml;utf8,<%=raw URI.escape(File.read(File.join(Rails.root, 'app/assets/images/logo.svg'))) %>");
    background-repeat: no-repeat;
    background-position: left center;
    background-size: $logo-size;

    min-height: $logo-size;
    padding-left: $logo-size + 15px;

    h1 {
      margin: 0;
      margin-top: round(($logo-size - $logotype-size - round($tagline-size * 1.5))/2);
      font-weight: 700;
      font-size: rem($logotype-size);
      font-family: Oswald;
      line-height: rem($logotype-size);
      color: #4887bf;
      text-transform: uppercase;
    }

    p {
      margin: 0;
      font-size: rem($tagline-size);
      color: $text-color;
    }
  }

  nav {
    float: right;

    li {
      list-style-type: none;
      float: left;

      a {
        font-family: "Helvetica Neue", Rosario, Sans;
        font-weight: bold;
        text-transform: uppercase;
        color: $primary-color;
        margin: 0 0.5em;
        padding-bottom: 0.7em;

        &:hover {
          border-bottom: 1px solid $primary-color;
          text-decoration: none;
        }

        &.active {
          color: $secondary-color;
          border-bottom: 1px solid $secondary-color;
        }
      }

      &:last-child {
        a {
          margin-right: 0;
        }
      }
    }
  }
}
